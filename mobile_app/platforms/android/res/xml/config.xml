<?xml version='1.0' encoding='utf-8'?>
<widget id="com.quantadex.stageapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="RemoteInjection">
        <param name="android-package" value="com.truckmovers.cordova.RemoteInjectionPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>QUANTA(stage)</name>
    <description>
        QDex Exchange
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="https://trade-stage.quantadex.com/testnet/?app=true" />
    <access allows-arbitrary-loads-for-media="true" allows-arbitrary-loads-in-web-content="true" allows-local-networking="true" origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/drawable-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="res/drawable-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="res/drawable-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="res/drawable-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="res/drawable-xxxhdpi/ic_launcher.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
